<Window
    x:Class="KonnectChatIRC.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:KonnectChatIRC"
    xmlns:converters="using:KonnectChatIRC.Converters"
    xmlns:helpers="using:KonnectChatIRC.Helpers"
    mc:Ignorable="d">
 


    <Grid x:Name="MainGrid" Background="{StaticResource AppBackgroundBrush}">
        <Grid.Resources>
            <converters:NullToVisibilityConverter x:Key="NullToVis" />
            <converters:BoolToGridLengthConverter x:Key="BoolToGridLength" />
            <converters:CollectionVisibilityConverter x:Key="CollectionVisibility" />
            <ThemeShadow x:Name="SharedShadow" />
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Custom Title Bar -->
        <Grid x:Name="AppTitleBar" Grid.ColumnSpan="2" Background="Transparent" VerticalAlignment="Top" Height="32">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="0">
                <Button x:Name="MinimizeButton" Width="46" Height="32" Background="Transparent" BorderThickness="0" Click="MinimizeButton_Click" ToolTipService.ToolTip="Minimize">
                    <FontIcon Glyph="&#xE921;" FontSize="10"/>
                </Button>
                <Button x:Name="CloseButton" Width="46" Height="32" Background="Transparent" BorderThickness="0" Click="CloseButton_Click" ToolTipService.ToolTip="Close">
                    <Button.Resources>
                        <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#FFC42B1C"/>
                        <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="White"/>
                        <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#FFC42B1C"/>
                        <SolidColorBrush x:Key="ButtonForegroundPressed" Color="White"/>
                    </Button.Resources>
                    <FontIcon Glyph="&#xE8BB;" FontSize="10"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Server Sidebar (Multi-server) -->
        <Border Grid.Row="1" Grid.Column="0" Background="{StaticResource AppBackgroundBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,1,0" 
                Visibility="{Binding IsSidebarCollapsed, Converter={StaticResource InverseBoolToVis}}">
            <Grid Width="68">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Sidebar Toggle (Collapse) -->
                <Button Grid.Row="0" Command="{Binding ToggleSidebarCommand}" 
                        HorizontalAlignment="Center" Margin="0,8"
                        Background="Transparent" BorderThickness="0">
                    <FontIcon Glyph="&#xE700;" FontSize="18"/>
                </Button>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden">
                    <StackPanel Spacing="12" Padding="8,8">
                        <ListView ItemsSource="{Binding Servers}"
                                  SelectedItem="{Binding SelectedServer, Mode=TwoWay}"
                                  SelectionMode="Single"
                                  Padding="0" Background="Transparent"
                                  x:Name="ServerListView">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid ToolTipService.ToolTip="{Binding ServerName}" Margin="0,4">
                                        <Grid.ContextFlyout>
                                            <MenuFlyout>
                                                <MenuFlyoutItem Text="Remove Server" 
                                                                Command="{Binding DataContext.RemoveServerCommand, ElementName=MainGrid}"
                                                                CommandParameter="{Binding}">
                                                    <MenuFlyoutItem.Icon>
                                                        <FontIcon Glyph="&#xE74D;" />
                                                    </MenuFlyoutItem.Icon>
                                                </MenuFlyoutItem>
                                            </MenuFlyout>
                                        </Grid.ContextFlyout>
                                        <Border Width="48" Height="48" CornerRadius="24"
                                                Background="{StaticResource SidebarBackgroundBrush}"
                                                BorderBrush="{StaticResource AccentBrush}"
                                                BorderThickness="2">
                                            <TextBlock Text="{Binding ServerInitials}" 
                                                       FontWeight="Bold" FontSize="18"
                                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="MinWidth" Value="0"/>
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                </Style>
                            </ListView.ItemContainerStyle>
                        </ListView>
                        
                        <Button Command="{Binding AddServerCommand}" Width="48" Height="48" CornerRadius="24"
                                HorizontalAlignment="Center" Background="{StaticResource SidebarBackgroundBrush}"
                                BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
                            <FontIcon Glyph="&#xE710;" FontSize="20" Foreground="{StaticResource AccentBrush}"/>
                        </Button>
                    </StackPanel>
                </ScrollViewer>

                <!-- Settings Button (Bottom) -->
                <Button Grid.Row="2" Command="{Binding SettingsCommand}" 
                        HorizontalAlignment="Center" Margin="0,8"
                        Background="Transparent" BorderThickness="0" Padding="8"
                        ToolTipService.ToolTip="App Settings">
                    <FontIcon Glyph="&#xE713;" FontSize="18" Foreground="{StaticResource TextSecondaryBrush}"/>
                </Button>
            </Grid>
        </Border>

        <!-- Main Workspace -->
        <Grid Grid.Row="1" Grid.Column="1">
            <!-- Main Chat Interface -->
            <Grid Visibility="{Binding SelectedServer, Converter={StaticResource NullToVis}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250" MinWidth="150"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="{Binding IsUserListCollapsed, Converter={StaticResource BoolToGridLength}}" 
                                      MinWidth="0"/>
                </Grid.ColumnDefinitions>

                <!-- Sidebar (Channels) -->
                <Border Grid.Column="0" Background="{StaticResource SidebarBackgroundBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,1,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0">
                            <!-- Sidebar Toggle (Expand) - Integrated into header -->
                            <Button Command="{Binding ToggleSidebarCommand}" 
                                    HorizontalAlignment="Left" VerticalAlignment="Top" 
                                    Margin="12,12,0,-12"
                                    Visibility="{Binding IsSidebarCollapsed, Converter={StaticResource BoolToVis}}"
                                    Background="Transparent" BorderThickness="0"
                                    Padding="4">
                                <FontIcon Glyph="&#xE700;" FontSize="18" Foreground="{StaticResource AccentBrush}"/>
                            </Button>

                            <Grid Margin="16,24,16,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel>
                                    <TextBlock Text="{Binding SelectedServer.ServerName}" Style="{StaticResource ProHeaderStyle}"/>
                                    <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,4,0,0">
                                        <!-- Self Status Indicator (clickable, separate from nick) -->
                                        <Button Command="{Binding SelectedServer.ToggleAwayCommand}" 
                                                Background="Transparent" BorderThickness="0" Padding="2"
                                                VerticalAlignment="Center" MinWidth="0" MinHeight="0"
                                                ToolTipService.ToolTip="Toggle Away Status">
                                            <Ellipse Width="10" Height="10">
                                                <Ellipse.Fill>
                                                    <SolidColorBrush Color="{Binding SelectedServer.IsSelfOnline, Converter={StaticResource StatusToColorConverter}}"/>
                                                </Ellipse.Fill>
                                            </Ellipse>
                                        </Button>
                                        <HyperlinkButton Padding="0" Tapped="Nickname_Tapped" ToolTipService.ToolTip="Change Nickname">
                                            <TextBlock Text="{Binding SelectedServer.CurrentNick}" Foreground="{StaticResource AccentLightBrush}" FontWeight="SemiBold" FontSize="14"/>
                                        </HyperlinkButton>
                                    </StackPanel>
                                </StackPanel>
                                <Button Grid.Column="1" Background="Transparent" BorderThickness="0" Padding="4" VerticalAlignment="Top">
                                    <FontIcon Glyph="&#xE712;" FontSize="16" Foreground="{StaticResource TextSecondaryBrush}"/>
                                    <Button.Flyout>
                                        <MenuFlyout>
                                            <MenuFlyoutItem Text="Identify Nick" Command="{Binding SelectedServer.IdentCommand}"/>
                                            <MenuFlyoutItem Text="Operator Login" Command="{Binding SelectedServer.OperCommand}"/>
                                            <MenuFlyoutSeparator/>
                                            <ToggleMenuFlyoutItem Text="No PM" IsChecked="{Binding SelectedServer.IsPrivateMessagingDisabled, Mode=TwoWay}"/>
                                        </MenuFlyout>
                                    </Button.Flyout>
                                </Button>
                            </Grid>
                        </StackPanel>

                        <ScrollViewer Grid.Row="1">
                            <StackPanel>
                                <!-- Favorites Section -->
                                <TextBlock Text="FAVORITES" FontSize="11" FontWeight="Bold" Foreground="{StaticResource TextSecondaryBrush}" Margin="16,12,16,4"
                                           Visibility="{Binding SelectedServer.FavoriteChannels, Converter={StaticResource CollectionVisibility}}"/>
                                <ListView x:Name="FavoriteChannelsList"
                                          ItemsSource="{Binding SelectedServer.FavoriteChannels}" 
                                          SelectedItem="{Binding SelectedServer.SelectedChannel}"
                                          ItemTemplate="{StaticResource ProChannelTemplate}"
                                          SelectionMode="Single"
                                          ScrollViewer.VerticalScrollMode="Disabled"
                                          SelectionChanged="FavoriteChannelsList_SelectionChanged"/>

                                <!-- Channels Section -->
                                <TextBlock Text="CHANNELS" FontSize="11" FontWeight="Bold" Foreground="{StaticResource TextSecondaryBrush}" Margin="16,12,16,4"/>
                                <ListView x:Name="OtherChannelsList"
                                          ItemsSource="{Binding SelectedServer.OtherChannels}" 
                                          SelectedItem="{Binding SelectedServer.SelectedChannel}"
                                          ItemTemplate="{StaticResource ProChannelTemplate}"
                                          SelectionMode="Single"
                                          CanReorderItems="True" AllowDrop="True"
                                          ScrollViewer.VerticalScrollMode="Disabled"
                                          SelectionChanged="OtherChannelsList_SelectionChanged"/>

                                <!-- Private Messages Section -->
                                <TextBlock Text="PRIVATE MESSAGES" FontSize="11" FontWeight="Bold" Foreground="{StaticResource TextSecondaryBrush}" Margin="16,12,16,4"
                                           Visibility="{Binding SelectedServer.PrivateMessages.Count, Converter={StaticResource CountToVis}}"/>
                                <ListView x:Name="PrivateMessagesList"
                                          ItemsSource="{Binding SelectedServer.PrivateMessages}" 
                                          SelectedItem="{Binding SelectedServer.SelectedChannel}"
                                          SelectionMode="Single"
                                          CanReorderItems="True" AllowDrop="True"
                                          ScrollViewer.VerticalScrollMode="Disabled"
                                          SelectionChanged="PrivateMessagesList_SelectionChanged"
                                          Visibility="{Binding SelectedServer.PrivateMessages.Count, Converter={StaticResource CountToVis}}">
                                    <ListView.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Padding="12,8" Background="Transparent" AutomationProperties.Name="{Binding Name}">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                                                    <FontIcon Glyph="&#xE8BD;" FontSize="14" Foreground="{StaticResource TextSecondaryBrush}"/>
                                                    <TextBlock Text="{Binding Name}" VerticalAlignment="Center" FontWeight="Medium" Foreground="{StaticResource TextPrimaryBrush}"/>
                                                    <!-- Unread Counter -->
                                                    <Border Background="{StaticResource AccentBrush}" CornerRadius="9" MinWidth="18" Height="18" Padding="4,0"
                                                            Visibility="{Binding UnreadCount, Converter={StaticResource CountToVis}}" VerticalAlignment="Center" Margin="4,0,0,0">
                                                        <TextBlock Text="{Binding UnreadCount}" Foreground="White" FontSize="10" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </StackPanel>
                                                <!-- Close Button -->
                                                <Button Grid.Column="1" 
                                                        Command="{Binding DataContext.SelectedServer.ClosePrivateChatCommand, ElementName=MainGrid}"
                                                        CommandParameter="{Binding}"
                                                        Background="Transparent" BorderThickness="0" Padding="4"
                                                        VerticalAlignment="Center"
                                                        ToolTipService.ToolTip="Close Chat">
                                                    <FontIcon Glyph="&#xE711;" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}"/>
                                                </Button>
                                            </Grid>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                            </StackPanel>
                        </ScrollViewer>

                        <StackPanel Grid.Row="2" Margin="16" Spacing="8">
                            <Button Content="Discover Channels" HorizontalAlignment="Stretch" Margin="0,0,0,8"
                                    Command="{Binding SelectedServer.RefreshChannelListCommand}" Click="DiscoverChannels_Click"/>
                            <Button Content="Disconnect" HorizontalAlignment="Stretch" Command="{Binding SelectedServer.DisconnectCommand}"/>
                        </StackPanel>
                    </Grid>
                </Border>

            <!-- Chat Area -->
            <Grid Grid.Column="1" Background="{StaticResource ChatBackgroundBrush}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1" Padding="16,12">
                    <StackPanel>
                        <TextBlock Text="{Binding SelectedServer.SelectedChannel.Name}" Style="{StaticResource ProHeaderStyle}"/>
                        <HyperlinkButton Padding="0" Margin="0,4,0,0" HorizontalAlignment="Left" Click="Topic_Click" ToolTipService.ToolTip="View/Edit Topic">
                            <TextBlock Text="{Binding SelectedServer.SelectedChannel.Topic}" Foreground="{StaticResource TextSecondaryBrush}" 
                                       Visibility="{Binding SelectedServer.SelectedChannel.Topic, Converter={StaticResource NullToVis}}"
                                       TextTrimming="CharacterEllipsis" FontSize="12"/>
                        </HyperlinkButton>
                    </StackPanel>
                </Border>

                <!-- Right Toggle (For User List) -->
                <Button Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,12,12,0"
                        Command="{Binding ToggleUserListCommand}" Background="Transparent" BorderThickness="0" Padding="4"
                        Visibility="{Binding IsUserListCollapsed, Converter={StaticResource BoolToVis}}">
                    <FontIcon Glyph="&#xE700;" FontSize="18" Foreground="{StaticResource AccentBrush}"/>
                </Button>

                <!-- Messages -->
                <ListView x:Name="ChatList" Grid.Row="1" ItemsSource="{Binding SelectedServer.SelectedChannel.Messages}" 
                          SelectionMode="None" Loaded="ChatList_Loaded" 
                          ShowsScrollingPlaceholders="False"
                          IncrementalLoadingThreshold="2"
                          DataFetchSize="3">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,4,0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" MinWidth="50"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Text="{Binding FormattedTime}" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" VerticalAlignment="Top" Margin="0,0,8,0"
                                           Visibility="{Binding IsSystem, Converter={StaticResource InverseBoolToVis}}"/>
                                
                                <!-- Sender Name Container (Hidden for System Messages) -->
                                <Grid Grid.Column="1" VerticalAlignment="Top" Margin="0,0,8,0"
                                      Visibility="{Binding IsSystem, Converter={StaticResource InverseBoolToVis}}">
                                    
                                    <!-- Normal Sender Name -->
                                    <TextBlock FontWeight="SemiBold"
                                               Visibility="{Binding DataContext.IsRainbowNicksEnabled, ElementName=MainGrid, Converter={StaticResource InverseBoolToVis}}">
                                        <TextBlock.Foreground>
                                            <SolidColorBrush Color="{Binding SenderPrefix, Converter={StaticResource StatusToColorConverter}}"/>
                                        </TextBlock.Foreground>
                                        <Run Text="{Binding SenderPrefix}"/><Run Text="{Binding Sender}"/><Run Text=":"/>
                                    </TextBlock>

                                    <!-- Rainbow Sender Name (Visible only when Rainbow Enabled) -->
                                    <TextBlock FontWeight="Bold"
                                               Visibility="{Binding DataContext.IsRainbowNicksEnabled, ElementName=MainGrid, Converter={StaticResource BoolToVis}}">
                                        <Run Text="{Binding SenderPrefix}"/><Run Text="{Binding Sender}"/><Run Text=":"/>
                                        <TextBlock.Foreground>
                                            <LinearGradientBrush x:Name="RainbowBrush" StartPoint="0,0.5" EndPoint="1,0.5" SpreadMethod="Repeat" MappingMode="RelativeToBoundingBox">
                                                <LinearGradientBrush.RelativeTransform>
                                                    <TranslateTransform x:Name="RainbowBrushTransform" X="0"/>
                                                </LinearGradientBrush.RelativeTransform>
                                                <GradientStop Color="#FF0000" Offset="0"/>
                                                <GradientStop Color="#FFFF00" Offset="0.16"/>
                                                <GradientStop Color="#00FF00" Offset="0.33"/>
                                                <GradientStop Color="#00FFFF" Offset="0.5"/>
                                                <GradientStop Color="#0000FF" Offset="0.66"/>
                                                <GradientStop Color="#FF00FF" Offset="0.83"/>
                                                <GradientStop Color="#FF0000" Offset="1"/>
                                            </LinearGradientBrush>
                                        </TextBlock.Foreground>
                                        <TextBlock.Triggers>
                                            <!-- Continuous Scrolling Animation (Speed: 1s) -->
                                            <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                                                <BeginStoryboard>
                                                    <Storyboard RepeatBehavior="Forever">
                                                        <DoubleAnimation Storyboard.TargetName="RainbowBrushTransform" 
                                                                         Storyboard.TargetProperty="X"
                                                                         From="0" To="-1" Duration="0:0:1" />
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger>
                                        </TextBlock.Triggers>
                                    </TextBlock>
                                </Grid>
                                
                                <!-- Message Content Stack -->
                                <StackPanel Grid.Column="2" VerticalAlignment="Top">
                                    <RichTextBlock HorizontalAlignment="Left" IsTextSelectionEnabled="True"
                                                   helpers:Linkify.Text="{Binding Content}" 
                                                   Foreground="{StaticResource TextPrimaryBrush}" 
                                                   Visibility="{Binding IsRegularMessage, Converter={StaticResource BoolToVis}}"/>

                                    <RichTextBlock HorizontalAlignment="Left" IsTextSelectionEnabled="True"
                                                   helpers:Linkify.Text="{Binding Content}" 
                                                   Foreground="{StaticResource AccentBrush}" 
                                                   FontStyle="Italic"
                                                   Visibility="{Binding IsAction, Converter={StaticResource BoolToVis}}"/>

                                    <!-- Image Rendering -->
                                    <Border CornerRadius="8" Margin="0,8,0,0" HorizontalAlignment="Left"
                                            Visibility="{Binding ImageUrl, Converter={StaticResource NullToVis}}">
                                        <Image Source="{Binding ImageUrl}" MaxHeight="300" MaxWidth="500" Stretch="Uniform" HorizontalAlignment="Left">
                                            <ToolTipService.ToolTip>
                                                <TextBlock Text="{Binding ImageUrl}"/>
                                            </ToolTipService.ToolTip>
                                        </Image>
                                    </Border>
                                </StackPanel>

                                <!-- System Message Content (Is System) -->
                                <TextBlock Grid.Column="0" Grid.ColumnSpan="3" Text="{Binding Content}" Foreground="{StaticResource TextSecondaryBrush}" FontStyle="Italic" FontSize="13" TextWrapping="Wrap" VerticalAlignment="Top"
                                           Visibility="{Binding IsSystem, Converter={StaticResource BoolToVis}}"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <ItemsStackPanel ItemsUpdatingScrollMode="KeepLastItemInView" />
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    <ListView.ItemContainerTransitions>
                        <TransitionCollection>
                            <EntranceThemeTransition IsStaggeringEnabled="False" />
                        </TransitionCollection>
                    </ListView.ItemContainerTransitions>
                </ListView>
                
                <!-- Input -->
                <StackPanel Grid.Row="2" Margin="16,0,16,16">
                    <InfoBar x:Name="UploadInfoBar" IsOpen="False" Margin="0,0,0,8" IsClosable="True" />
                    
                    <Grid ColumnSpacing="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Button x:Name="UploadButton" Grid.Column="0" Click="UploadImage_Click" 
                                ToolTipService.ToolTip="Upload Image"
                                Background="Transparent" BorderThickness="0" Padding="8">
                            <FontIcon Glyph="&#xEB9F;" FontSize="20" Foreground="{StaticResource AccentBrush}"/>
                        </Button>

                        <TextBox Grid.Column="1" x:Name="ChatInput" PlaceholderText="Message #channel..." KeyDown="ChatInput_KeyDown" CornerRadius="4"/>

                        <Button Grid.Column="2" Content="Send" Margin="8,0,0,0" 
                                Command="{Binding SelectedServer.SendCommand}" 
                                CommandParameter="{Binding Text, ElementName=ChatInput}"/>
                    </Grid>
                </StackPanel>
            </Grid>

                <!-- User List -->
                <Border Grid.Column="2" Background="{StaticResource AppBackgroundBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1,0,0,0"
                        Visibility="{Binding IsUserListCollapsed, Converter={StaticResource InverseBoolToVis}}">
                    <Grid Width="200">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Padding="12,12,12,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Users" FontWeight="Bold" FontSize="14" Foreground="{StaticResource TextSecondaryBrush}"/>
                            <Button Grid.Column="1" Command="{Binding ToggleUserListCommand}" Background="Transparent" BorderThickness="0" Padding="4">
                                <FontIcon Glyph="&#xE700;" FontSize="14" Foreground="{StaticResource TextSecondaryBrush}"/>
                            </Button>
                        </Grid>

                        <TextBox Grid.Row="1" x:Name="UserSearchBox" 
                                 PlaceholderText="Filter users..." 
                                 Margin="12,0,12,8"
                                 Text="{Binding SelectedServer.SelectedChannel.UserSearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 FontSize="12" Height="32" CornerRadius="4"/>

                        <ScrollViewer Grid.Row="2">
                            <ItemsControl ItemsSource="{Binding SelectedServer.SelectedChannel.GroupedUsers}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="0,0,0,12">
                                            <TextBlock Text="{Binding Key}" FontWeight="Bold" Foreground="{StaticResource TextSecondaryBrush}" Margin="12,8,0,4" FontSize="12"/>
                                            <ItemsControl ItemsSource="{Binding}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                    <Grid Margin="12,2" Background="Transparent" Tapped="UserItem_Tapped">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="16"/>
                                                            <ColumnDefinition Width="Auto" MinWidth="12"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>
                                                        
                                                        <!-- Status Indicator -->
                                                        <Ellipse Width="8" Height="8" Margin="0,0,8,0" VerticalAlignment="Center">
                                                            <Ellipse.Fill>
                                                                <SolidColorBrush Color="{Binding IsOnline, Converter={StaticResource StatusToColorConverter}}"/>
                                                            </Ellipse.Fill>
                                                        </Ellipse>

                                                        <TextBlock Grid.Column="1" Text="{Binding Prefix}" FontWeight="Bold">
                                                            <TextBlock.Foreground>
                                                                <SolidColorBrush Color="{Binding Prefix, Converter={StaticResource StatusToColorConverter}}"/>
                                                            </TextBlock.Foreground>
                                                        </TextBlock>
                                                        
                                                        <!-- Normal User List Nick -->
                                                        <TextBlock Grid.Column="2" Text="{Binding Nickname}">
                                                            <TextBlock.Foreground>
                                                                <SolidColorBrush Color="{Binding Prefix, Converter={StaticResource StatusToColorConverter}}"/>
                                                            </TextBlock.Foreground>
                                                        </TextBlock>

                                                        <FlyoutBase.AttachedFlyout>
                                                            <Flyout>
                                                                <StackPanel Width="220" Spacing="10">
                                                                    <Grid>
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="*"/>
                                                                            <ColumnDefinition Width="Auto"/>
                                                                            <ColumnDefinition Width="Auto"/>
                                                                        </Grid.ColumnDefinitions>
                                                                        <TextBlock Text="{Binding Nickname}" FontWeight="Bold" FontSize="18" Foreground="{StaticResource AccentBrush}" VerticalAlignment="Center"/>
                                                                        
                                                                        <Button Grid.Column="1" ToolTipService.ToolTip="Slap User"
                                                                                Command="{Binding DataContext.SelectedServer.SlapCommand, ElementName=MainGrid}" 
                                                                                CommandParameter="{Binding}" Background="Transparent" BorderThickness="0" Padding="4" Margin="0,0,4,0">
                                                                            <Image Source="ms-appx:///Assets/slap.png" Width="20" Height="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                        </Button>

                                                                        <Button Grid.Column="2" ToolTipService.ToolTip="Send Private Message"
                                                                                Command="{Binding DataContext.SelectedServer.StartPrivateChatCommand, ElementName=MainGrid}" 
                                                                                CommandParameter="{Binding}" Background="Transparent" BorderThickness="0" Padding="4">
                                                                            <FontIcon Glyph="&#xE8BD;" FontSize="18" Foreground="{StaticResource AccentBrush}"/>
                                                                        </Button>
                                                                    </Grid>
                                                                    <StackPanel>
                                                                        <TextBlock Text="Host:" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}"/>
                                                                        <TextBlock Text="{Binding Hostname}" IsTextSelectionEnabled="True" TextWrapping="Wrap"/>
                                                                    </StackPanel>
                                                                    <StackPanel>
                                                                        <TextBlock Text="Channels:" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}"/>
                                                                        <ItemsControl ItemsSource="{Binding Channels}">
                                                                            <ItemsControl.ItemsPanel>
                                                                                <ItemsPanelTemplate>
                                                                                    <VariableSizedWrapGrid Orientation="Horizontal" MaximumRowsOrColumns="5"/>
                                                                                </ItemsPanelTemplate>
                                                                            </ItemsControl.ItemsPanel>
                                                                            <ItemsControl.ItemTemplate>
                                                                                <DataTemplate>
                                                                                    <HyperlinkButton Content="{Binding}" Padding="4,2" 
                                                                                                    Command="{Binding DataContext.SelectedServer.JoinChannelCommand, ElementName=MainGrid}"
                                                                                                    CommandParameter="{Binding}"/>
                                                                                </DataTemplate>
                                                                            </ItemsControl.ItemTemplate>
                                                                        </ItemsControl>
                                                                    </StackPanel>
                                                                    
                                                                    <MenuFlyoutSeparator/>
                                                                    
                                                                    <Button Content="WHOIS" HorizontalAlignment="Stretch" 
                                                                            Command="{Binding DataContext.SelectedServer.WhoisUserCommand, ElementName=MainGrid}" 
                                                                            CommandParameter="{Binding}" Click="ShowAdvancedWhois_Click"/>
                                                                    
                                                                    <Grid ColumnSpacing="8" Visibility="{Binding DataContext.SelectedServer.SelectedChannel.IsPrivate, ElementName=MainGrid, Converter={StaticResource InverseBoolToVis}}">
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="*"/>
                                                                            <ColumnDefinition Width="*"/>
                                                                        </Grid.ColumnDefinitions>
                                                                        <Button Content="Op" HorizontalAlignment="Stretch" 
                                                                                Command="{Binding DataContext.SelectedServer.OpUserCommand, ElementName=MainGrid}" 
                                                                                CommandParameter="{Binding}"/>
                                                                        <Button Grid.Column="1" Content="Deop" HorizontalAlignment="Stretch" 
                                                                                Command="{Binding DataContext.SelectedServer.DeopUserCommand, ElementName=MainGrid}" 
                                                                                CommandParameter="{Binding}"/>
                                                                    </Grid>


                                                                    <Grid ColumnSpacing="8" Visibility="{Binding DataContext.SelectedServer.SelectedChannel.IsPrivate, ElementName=MainGrid, Converter={StaticResource InverseBoolToVis}}">
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="*"/>
                                                                            <ColumnDefinition Width="*"/>
                                                                        </Grid.ColumnDefinitions>
                                                                        <Button Content="Kick" HorizontalAlignment="Stretch" 
                                                                                Command="{Binding DataContext.SelectedServer.KickUserCommand, ElementName=MainGrid}" 
                                                                                CommandParameter="{Binding}"/>
                                                                        <Button Grid.Column="1" Content="Ban" HorizontalAlignment="Stretch" 
                                                                                Command="{Binding DataContext.SelectedServer.BanUserCommand, ElementName=MainGrid}" 
                                                                                CommandParameter="{Binding}"/>
                                                                    </Grid>

                                                                    <StackPanel Visibility="{Binding DataContext.SelectedServer.IsIrcOp, ElementName=MainGrid, Converter={StaticResource BoolToVis}}">
                                                                        <MenuFlyoutSeparator/>
                                                                        <TextBlock Text="Operator Actions" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,4"/>
                                                                        <Grid ColumnSpacing="8">
                                                                            <Grid.ColumnDefinitions>
                                                                                <ColumnDefinition Width="*"/>
                                                                                <ColumnDefinition Width="*"/>
                                                                            </Grid.ColumnDefinitions>
                                                                            <Button Content="Kill" HorizontalAlignment="Stretch" 
                                                                                    Command="{Binding DataContext.SelectedServer.KillUserCommand, ElementName=MainGrid}" 
                                                                                    CommandParameter="{Binding}"/>
                                                                            <Button Grid.Column="1" Content="Gline" HorizontalAlignment="Stretch" 
                                                                                    Command="{Binding DataContext.SelectedServer.GlineUserCommand, ElementName=MainGrid}" 
                                                                                    CommandParameter="{Binding}"/>
                                                                        </Grid>
                                                                    </StackPanel>
                                                                </StackPanel>
                                                            </Flyout>
                                                        </FlyoutBase.AttachedFlyout>
                                                    </Grid>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>

            <!-- Settings Dialog -->
            <ContentDialog x:Name="SettingsDialog"
                           Title="App Settings"
                           CloseButtonText="Close"
                           RequestedTheme="Dark"
                           Background="{StaticResource SidebarBackgroundBrush}">
                <StackPanel Width="400" Spacing="20">
                    <StackPanel Spacing="8">
                        <TextBlock Text="Chat Timestamps" FontWeight="Bold" Foreground="{StaticResource AccentBrush}"/>
                        <ToggleSwitch x:Name="TimestampSecondsToggle"
                                      Header="Show seconds in timestamps"
                                      OnContent="HH:mm:ss" OffContent="HH:mm"
                                      Toggled="TimestampSecondsToggle_Toggled"/>
                        <TextBlock Text="Toggle between HH:mm:ss and HH:mm timestamp format in chat messages."
                                   FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" TextWrapping="Wrap"/>
                    </StackPanel>
                    <StackPanel Spacing="8">
                        <TextBlock Text="Appearance" FontWeight="Bold" Foreground="{StaticResource AccentBrush}"/>
                        <ToggleSwitch Header="Rainbow Nicks" 
                                      OnContent="Enabled" OffContent="Disabled"
                                      IsOn="{Binding IsRainbowNicksEnabled, Mode=TwoWay}"/>
                        <TextBlock Text="When enabled, nicknames in chat will cycle colors consistently in a smooth rainbow pattern." 
                                   FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" TextWrapping="Wrap"/>
                    </StackPanel>
                </StackPanel>
            </ContentDialog>

            <!-- Connection Overlay (Centered in Workspace) -->
            <Grid Background="Transparent" Visibility="{Binding SelectedServer, Converter={StaticResource NullToVis}, ConverterParameter=Invert}">
                <!-- Subtle Backdrop -->
                <Border Background="Black" Opacity="0.5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
                
                <Border Background="{StaticResource SidebarBackgroundBrush}" 
                        Opacity="0.95"
                        CornerRadius="16" 
                        Width="520"
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Center"
                        Padding="35,30"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1"
                        Shadow="{StaticResource SharedShadow}">
                    <StackPanel Spacing="20">
                        <StackPanel Spacing="6">
                            <Image Source="ms-appx:///konnectchat2.png" MaxHeight="120" HorizontalAlignment="Center"/>
                            <TextBlock Text="KonnectChat IRC" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Foreground="{StaticResource AccentBrush}"/>
                            <TextBlock Text="Connect to a server to get started" FontSize="14" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                        </StackPanel>
                        
                        <Grid ColumnSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Header="Server Address" Text="{Binding ConnectAddress, Mode=TwoWay}" PlaceholderText="irc.libera.chat" HorizontalAlignment="Stretch"/>
                            <NumberBox Grid.Column="1" Header="Port" Value="{Binding ConnectPort, Mode=TwoWay}" Width="100" SmallChange="1" LargeChange="10" SpinButtonPlacementMode="Compact"/>
                        </Grid>
                        
                        <Grid ColumnSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Header="Nickname" Text="{Binding ConnectNick, Mode=TwoWay}" PlaceholderText="KonnectUser" HorizontalAlignment="Stretch"/>
                            <TextBox Grid.Column="1" Header="Auto-Join" Text="{Binding AutoJoinChannel, Mode=TwoWay}" PlaceholderText="#konnect-chat" HorizontalAlignment="Stretch"/>
                        </Grid>
                        
                        <Expander Header="Advanced Options" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch">
                            <StackPanel Spacing="12">
                                <CheckBox Content="Use Server Password" IsChecked="{Binding UseServerPassword, Mode=TwoWay}"/>
                                <PasswordBox Header="Password" Password="{Binding ServerPassword, Mode=TwoWay}" 
                                             Visibility="{Binding UseServerPassword, Converter={StaticResource BoolToVis}}"/>
                            </StackPanel>
                        </Expander>

                        <CheckBox Content="Remember Me" IsChecked="{Binding RememberMe, Mode=TwoWay}" Margin="0,-10,0,0"/>

                        <Button Content="Connect Now" HorizontalAlignment="Stretch" Padding="12"
                                Background="{StaticResource AccentBrush}" Foreground="White" FontWeight="Bold" FontSize="16"
                                Command="{Binding ConnectCommand}" CornerRadius="8"/>
                        
                        <TextBlock Text="Tip: You can save multiple servers in the sidebar." FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>

        <!-- Channel List Dialog -->
        <ContentDialog x:Name="ChannelListDialog" 
                       Title="Discover Channels"
                       PrimaryButtonText="Close"
                       SecondaryButtonText="Refresh"
                       SecondaryButtonClick="ChannelListDialog_RefreshClick"
                       RequestedTheme="Dark"
                       Background="{StaticResource SidebarBackgroundBrush}">
            <Grid Width="500" Height="400">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBox x:Name="ChannelSearchBox" PlaceholderText="Search channels..." Margin="0,0,0,12" 
                         Text="{Binding SelectedServer.ChannelSearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                
                <ScrollViewer Grid.Row="1">
                    <StackPanel>
                        <!-- Favorite Available Channels -->
                        <TextBlock Text="FAVORITES" FontSize="11" FontWeight="Bold" Foreground="{StaticResource TextSecondaryBrush}" Margin="12,8,12,4"
                                   Visibility="{Binding SelectedServer.FavoriteAvailableChannels, Converter={StaticResource CollectionVisibility}}"/>
                        <ListView ItemsSource="{Binding SelectedServer.FavoriteAvailableChannels}" SelectionMode="None">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="12" BorderThickness="0,0,0,1" BorderBrush="#222">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="16"/>
                                            <TextBlock Text="{Binding Topic}" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" MaxLines="2" TextWrapping="Wrap"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="12,0">
                                            <TextBlock Text="{Binding UserCount}" HorizontalAlignment="Center" FontWeight="Bold"/>
                                            <TextBlock Text="users" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}"/>
                                        </StackPanel>
                                        <Button Grid.Column="2" Content="Join" VerticalAlignment="Center" 
                                                Command="{Binding DataContext.SelectedServer.JoinChannelCommand, ElementName=MainGrid}"
                                                CommandParameter="{Binding Name}" Click="JoinChannelFromList_Click"/>
                                        <Button Grid.Column="3" 
                                                Command="{Binding DataContext.SelectedServer.ToggleFavoriteCommand, ElementName=MainGrid}"
                                                CommandParameter="{Binding}"
                                                Background="Transparent" BorderThickness="0" Padding="8"
                                                VerticalAlignment="Center" Margin="8,0,0,0">
                                            <Grid>
                                                <FontIcon Glyph="&#xE734;" FontSize="16" Foreground="{StaticResource TextSecondaryBrush}" 
                                                          Visibility="{Binding IsFavorite, Converter={StaticResource InverseBoolToVis}}"/>
                                                <FontIcon Glyph="&#xE735;" FontSize="16" Foreground="Gold" 
                                                          Visibility="{Binding IsFavorite, Converter={StaticResource BoolToVis}}"/>
                                            </Grid>
                                        </Button>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>

                        <!-- Private Messages -->

                        <!-- All Other Available Channels -->
                        <TextBlock Text="OTHER CHANNELS" FontSize="11" FontWeight="Bold" Foreground="{StaticResource TextSecondaryBrush}" Margin="12,16,12,4"/>
                        <ListView ItemsSource="{Binding SelectedServer.OtherAvailableChannels}" SelectionMode="None">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="12" BorderThickness="0,0,0,1" BorderBrush="#222">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="16"/>
                                            <TextBlock Text="{Binding Topic}" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" MaxLines="2" TextWrapping="Wrap"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="12,0">
                                            <TextBlock Text="{Binding UserCount}" HorizontalAlignment="Center" FontWeight="Bold"/>
                                            <TextBlock Text="users" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}"/>
                                        </StackPanel>
                                        <Button Grid.Column="2" Content="Join" VerticalAlignment="Center" 
                                                Command="{Binding DataContext.SelectedServer.JoinChannelCommand, ElementName=MainGrid}"
                                                CommandParameter="{Binding Name}" Click="JoinChannelFromList_Click"/>
                                        <Button Grid.Column="3" 
                                                Command="{Binding DataContext.SelectedServer.ToggleFavoriteCommand, ElementName=MainGrid}"
                                                CommandParameter="{Binding}"
                                                Background="Transparent" BorderThickness="0" Padding="8"
                                                VerticalAlignment="Center" Margin="8,0,0,0">
                                            <Grid>
                                                <FontIcon Glyph="&#xE734;" FontSize="16" Foreground="{StaticResource TextSecondaryBrush}" 
                                                          Visibility="{Binding IsFavorite, Converter={StaticResource InverseBoolToVis}}"/>
                                                <FontIcon Glyph="&#xE735;" FontSize="16" Foreground="Gold" 
                                                          Visibility="{Binding IsFavorite, Converter={StaticResource BoolToVis}}"/>
                                            </Grid>
                                        </Button>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </ContentDialog>

        <!-- Nickname Change Dialog -->
        <ContentDialog x:Name="NickChangeDialog"
                       Grid.Column="1"
                       Title="Change Nickname"
                       PrimaryButtonText="Change"
                       CloseButtonText="Cancel"
                       DefaultButton="Primary">
            <StackPanel Spacing="12">
                <TextBlock Text="Enter your new nickname:"/>
                <TextBox x:Name="NewNickTextBox" PlaceholderText="Nickname"/>
            </StackPanel>
        </ContentDialog>

        <!-- WHOIS Detail Dialog -->
        <ContentDialog x:Name="WhoisDetailDialog"
                       Grid.Column="1"
                       Title="User Information"
                       PrimaryButtonText="Close"
                       RequestedTheme="Dark"
                       DataContext="{Binding SelectedWhoisUser}"
                       Background="{StaticResource SidebarBackgroundBrush}">
            <StackPanel Width="400" Spacing="12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Nickname:" Width="100" Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBlock Grid.Column="1" Text="{Binding Nickname}" FontSize="18" FontWeight="Bold" Foreground="{StaticResource AccentBrush}"/>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Username:" Width="100" Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBlock Grid.Column="1" Text="{Binding Username}"/>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Hostname:" Width="100" Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBlock Grid.Column="1" Text="{Binding Hostname}" IsTextSelectionEnabled="True" TextWrapping="Wrap"/>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Real Name:" Width="100" Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBlock Grid.Column="1" Text="{Binding Realname}"/>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Server:" Width="110" Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBlock Grid.Column="1" Text="{Binding Server}" TextWrapping="Wrap"/>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Idle Time:" Width="110" Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBlock Grid.Column="1" Text="{Binding IdleDisplay}" Foreground="{StaticResource AccentLightBrush}" FontWeight="SemiBold"/>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Connected:" Width="110" Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBlock Grid.Column="1" Text="{Binding SignonDisplay}" FontWeight="SemiBold"/>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Connecting From:" Width="110" Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBlock Grid.Column="1" Text="{Binding ConnectingFrom}" IsTextSelectionEnabled="True" TextWrapping="Wrap" FontWeight="SemiBold"/>
                </Grid>

                <!-- Status Labels -->
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Border Background="{StaticResource AccentBrush}" CornerRadius="4" Padding="8,4" 
                            Visibility="{Binding IsIrcOp, Converter={StaticResource BoolToVis}}">
                        <TextBlock Text="is an IRC Operator" Foreground="White" FontSize="12" FontWeight="Bold"/>
                    </Border>
                    <Border Background="{StaticResource SuccessBrush}" CornerRadius="4" Padding="8,4" 
                            Visibility="{Binding IsNetworkAdmin, Converter={StaticResource BoolToVis}}">
                        <TextBlock Text="is a Network Administrator" Foreground="White" FontSize="12" FontWeight="Bold"/>
                    </Border>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Channels:" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,8,0,4"/>
                    <ItemsControl ItemsSource="{Binding Channels}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VariableSizedWrapGrid Orientation="Horizontal" MaximumRowsOrColumns="5"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <HyperlinkButton Content="{Binding}" Padding="4,2" Click="WhoisDetailChannel_Click"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </StackPanel>
        </ContentDialog>

        <!-- Topic View/Edit Dialog -->
        <ContentDialog x:Name="TopicEditDialog"
                       Grid.Column="1"
                       Title="Channel Topic"
                       PrimaryButtonText="Update Topic"
                       CloseButtonText="Close"
                       DefaultButton="Primary">
            <StackPanel Spacing="12" Width="400">
                <TextBlock Text="Current Topic:" Foreground="{StaticResource TextSecondaryBrush}"/>
                <TextBlock Text="{Binding SelectedServer.SelectedChannel.Topic}" TextWrapping="Wrap" FontWeight="SemiBold"/>
                
                <StackPanel x:Name="TopicEditStack" Spacing="8" Margin="0,12,0,0">
                    <TextBlock Text="Edit Topic (Operators Only):" Foreground="{StaticResource AccentBrush}" FontWeight="Bold"/>
                    <TextBox x:Name="TopicTextBox" PlaceholderText="Enter new topic..." TextWrapping="Wrap" AcceptsReturn="True" Height="80"/>
                </StackPanel>
            </StackPanel>
        </ContentDialog>

        <!-- Ident Dialog -->
        <ContentDialog x:Name="IdentDialog"
                       Grid.Column="1"
                       Title="Identify to NickServ"
                       PrimaryButtonText="Identify"
                       CloseButtonText="Cancel"
                       DefaultButton="Primary">
            <StackPanel Spacing="12" Width="300">
                <PasswordBox x:Name="IdentPasswordBox" Header="Password" PlaceholderText="Enter NickServ password"/>
            </StackPanel>
        </ContentDialog>

        <!-- Oper Dialog -->
        <ContentDialog x:Name="OperDialog"
                       Grid.Column="1"
                       Title="Operator Login"
                       PrimaryButtonText="Login"
                       CloseButtonText="Cancel"
                       DefaultButton="Primary">
            <StackPanel Spacing="12" Width="300">
                <TextBox x:Name="OperNickBox" Header="Nickname" PlaceholderText="Enter oper nickname"/>
                <PasswordBox x:Name="OperPasswordBox" Header="Password" PlaceholderText="Enter oper password"/>
            </StackPanel>
        </ContentDialog>

        <!-- Moderation Dialog -->
        <ContentDialog x:Name="ModerationDialog"
                       Grid.Column="1"
                       Title="Channel Moderation"
                       CloseButtonText="Close"
                       MinWidth="600"
                       MaxWidth="700">
            <StackPanel Width="520" Spacing="14" Padding="0,10,20,10" HorizontalAlignment="Stretch">
                
                <!-- Topic Section -->
                <StackPanel Spacing="4">
                    <TextBlock Text="Channel Topic:" Foreground="{StaticResource AccentBrush}" FontWeight="Bold" FontSize="12"/>
                    <Border Background="{StaticResource SidebarBackgroundBrush}" CornerRadius="4" Padding="12,8" BorderThickness="1" BorderBrush="{StaticResource BorderBrush}">
                        <StackPanel Spacing="8">
                            <TextBlock x:Name="ModerationTopicStaticText" Text="{Binding SelectedServer.SelectedChannel.Topic}" TextWrapping="Wrap" FontSize="13" Foreground="{StaticResource TextPrimaryBrush}"/>
                            
                            <StackPanel x:Name="ModerationTopicEditStack" Spacing="8">
                                <TextBox x:Name="ModerationTopicTextBox" PlaceholderText="Enter new topic..." TextWrapping="Wrap" AcceptsReturn="True" Height="60" FontSize="13"/>
                                <Button Content="Update Topic" Click="UpdateModerationTopic_Click" HorizontalAlignment="Right" Style="{StaticResource AccentButtonStyle}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Bans Section -->
                <StackPanel Spacing="4">
                    <TextBlock Text="Banned Masks:" Foreground="{StaticResource AccentBrush}" FontWeight="Bold" FontSize="12"/>
                    <ListView ItemsSource="{Binding SelectedServer.SelectedChannel.BanList}" SelectionMode="Single" x:Name="BanListView" Height="140"
                              Background="{StaticResource SidebarBackgroundBrush}" CornerRadius="4" BorderThickness="1" BorderBrush="{StaticResource BorderBrush}"
                              HorizontalAlignment="Stretch">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="8,1" HorizontalAlignment="Stretch">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{Binding}" VerticalAlignment="Center" FontSize="13" TextTrimming="CharacterEllipsis"/>
                                    <Button Grid.Column="1" Click="RemoveBan_Click" Background="Transparent" BorderThickness="0" Padding="4" HorizontalAlignment="Right">
                                        <FontIcon Glyph="&#xE107;" FontSize="14" Foreground="DarkRed"/>
                                    </Button>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="MinHeight" Value="32"/>
                                <Setter Property="Padding" Value="0"/>
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                    <Grid ColumnSpacing="8" Margin="0,4,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="NewBanTextBox" PlaceholderText="nick!user@host" KeyDown="NewBanTextBox_KeyDown"/>
                        <Button Grid.Column="1" Content="Add Ban" Click="AddBan_Click" Style="{StaticResource AccentButtonStyle}"/>
                    </Grid>
                </StackPanel>

                <!-- Modes Section -->
                <StackPanel Spacing="4">
                    <TextBlock Text="Channel Modes:" Foreground="{StaticResource AccentBrush}" FontWeight="Bold" FontSize="12"/>
                    <Grid ColumnSpacing="20" RowSpacing="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <CheckBox Content="Invite Only (+i)" IsChecked="{Binding SelectedServer.SelectedChannel.IsInviteOnly, Mode=OneWay}" 
                                  Tapped="Mode_Tapped" Tag="i" Grid.Row="0" Grid.Column="0" Margin="0"/>
                        <CheckBox Content="Moderated (+m)" IsChecked="{Binding SelectedServer.SelectedChannel.IsModerated, Mode=OneWay}" 
                                  Tapped="Mode_Tapped" Tag="m" Grid.Row="1" Grid.Column="0" Margin="0"/>
                        <CheckBox Content="No External (+n)" IsChecked="{Binding SelectedServer.SelectedChannel.IsNoExternal, Mode=OneWay}" 
                                  Tapped="Mode_Tapped" Tag="n" Grid.Row="2" Grid.Column="0" Margin="0"/>

                        <CheckBox Content="Topic Protection (+t)" IsChecked="{Binding SelectedServer.SelectedChannel.IsTopicProtected, Mode=OneWay}" 
                                  Tapped="Mode_Tapped" Tag="t" Grid.Row="0" Grid.Column="1" Margin="0"/>
                        <CheckBox Content="Secret (+s)" IsChecked="{Binding SelectedServer.SelectedChannel.IsSecret, Mode=OneWay}" 
                                  Tapped="Mode_Tapped" Tag="s" Grid.Row="1" Grid.Column="1" Margin="0"/>
                        <CheckBox Content="Private (+p)" IsChecked="{Binding SelectedServer.SelectedChannel.IsPrivateMode, Mode=OneWay}" 
                                  Tapped="Mode_Tapped" Tag="p" Grid.Row="2" Grid.Column="1" Margin="0"/>
                    </Grid>
                </StackPanel>

                <!-- Settings (Key/Limit) Section -->
                <Grid ColumnSpacing="20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Spacing="4">
                        <TextBlock Text="Password (+k):" Foreground="{StaticResource TextSecondaryBrush}" FontSize="11"/>
                        <TextBox x:Name="ChannelKeyBox" PlaceholderText="Optional key" HorizontalAlignment="Stretch" KeyDown="ChannelKeyBox_KeyDown"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Spacing="4">
                        <TextBlock Text="User Limit (+l):" Foreground="{StaticResource TextSecondaryBrush}" FontSize="11"/>
                        <NumberBox x:Name="ChannelLimitBox" PlaceholderText="No limit" SmallChange="1" LargeChange="10" 
                                   HorizontalAlignment="Stretch" ValueChanged="ChannelLimitBox_ValueChanged"/>
                    </StackPanel>
                </Grid>

            </StackPanel>
        </ContentDialog>

    </Grid>
</Window>
