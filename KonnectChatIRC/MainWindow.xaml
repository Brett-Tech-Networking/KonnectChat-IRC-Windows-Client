<Window
    x:Class="KonnectChatIRC.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:KonnectChatIRC"
    xmlns:converters="using:KonnectChatIRC.Converters"
    mc:Ignorable="d">
 


    <Grid x:Name="MainGrid" Background="{StaticResource AppBackgroundBrush}">
        <Grid.Resources>
            <converters:NullToVisibilityConverter x:Key="NullToVis" />
            <converters:BoolToGridLengthConverter x:Key="BoolToGridLength" />
            <converters:CollectionVisibilityConverter x:Key="CollectionVisibility" />
            <ThemeShadow x:Name="SharedShadow" />
        </Grid.Resources>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Server Sidebar (Multi-server) -->
        <Border Grid.Column="0" Background="{StaticResource AppBackgroundBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,1,0" 
                Visibility="{Binding IsSidebarCollapsed, Converter={StaticResource InverseBoolToVis}}">
            <Grid Width="68">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Sidebar Toggle (Collapse) -->
                <Button Grid.Row="0" Command="{Binding ToggleSidebarCommand}" 
                        HorizontalAlignment="Center" Margin="0,8"
                        Background="Transparent" BorderThickness="0">
                    <FontIcon Glyph="&#xE700;" FontSize="18"/>
                </Button>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Hidden">
                    <StackPanel Spacing="12" Padding="8,8">
                        <ListView ItemsSource="{Binding Servers}"
                                  SelectedItem="{Binding SelectedServer, Mode=TwoWay}"
                                  SelectionMode="Single"
                                  Padding="0" Background="Transparent"
                                  x:Name="ServerListView">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid ToolTipService.ToolTip="{Binding ServerName}" Margin="0,4">
                                        <Grid.ContextFlyout>
                                            <MenuFlyout>
                                                <MenuFlyoutItem Text="Remove Server" 
                                                                Command="{Binding DataContext.RemoveServerCommand, ElementName=MainGrid}"
                                                                CommandParameter="{Binding}">
                                                    <MenuFlyoutItem.Icon>
                                                        <FontIcon Glyph="&#xE74D;" />
                                                    </MenuFlyoutItem.Icon>
                                                </MenuFlyoutItem>
                                            </MenuFlyout>
                                        </Grid.ContextFlyout>
                                        <Border Width="48" Height="48" CornerRadius="24"
                                                Background="{StaticResource SidebarBackgroundBrush}"
                                                BorderBrush="{StaticResource AccentBrush}"
                                                BorderThickness="2">
                                            <TextBlock Text="{Binding ServerInitials}" 
                                                       FontWeight="Bold" FontSize="18"
                                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="MinWidth" Value="0"/>
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                </Style>
                            </ListView.ItemContainerStyle>
                        </ListView>
                        
                        <Button Command="{Binding AddServerCommand}" Width="48" Height="48" CornerRadius="24"
                                HorizontalAlignment="Center" Background="{StaticResource SidebarBackgroundBrush}"
                                BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
                            <FontIcon Glyph="&#xE710;" FontSize="20" Foreground="{StaticResource AccentBrush}"/>
                        </Button>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Main Workspace -->
        <Grid Grid.Column="1">
            <!-- Main Chat Interface -->
            <Grid Visibility="{Binding SelectedServer, Converter={StaticResource NullToVis}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250" MinWidth="150"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="{Binding IsUserListCollapsed, Converter={StaticResource BoolToGridLength}}" 
                                      MinWidth="0"/>
                </Grid.ColumnDefinitions>

                <!-- Sidebar (Channels) -->
                <Border Grid.Column="0" Background="{StaticResource SidebarBackgroundBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,1,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0">
                            <!-- Sidebar Toggle (Expand) - Integrated into header -->
                            <Button Command="{Binding ToggleSidebarCommand}" 
                                    HorizontalAlignment="Left" VerticalAlignment="Top" 
                                    Margin="12,12,0,-12"
                                    Visibility="{Binding IsSidebarCollapsed, Converter={StaticResource BoolToVis}}"
                                    Background="Transparent" BorderThickness="0"
                                    Padding="4">
                                <FontIcon Glyph="&#xE700;" FontSize="18" Foreground="{StaticResource AccentBrush}"/>
                            </Button>

                            <StackPanel Margin="16,24,16,16">
                                <TextBlock Text="{Binding SelectedServer.ServerName}" Style="{StaticResource ProHeaderStyle}"/>
                                <HyperlinkButton Padding="0" Margin="0,4,0,0" Tapped="Nickname_Tapped" ToolTipService.ToolTip="Change Nickname">
                                    <TextBlock Text="{Binding SelectedServer.CurrentNick}" Foreground="{StaticResource AccentLightBrush}" FontWeight="SemiBold" FontSize="14"/>
                                </HyperlinkButton>
                            </StackPanel>
                        </StackPanel>

                        <ScrollViewer Grid.Row="1">
                            <StackPanel>
                                <!-- Favorites Section -->
                                <TextBlock Text="FAVORITES" FontSize="11" FontWeight="Bold" Foreground="{StaticResource TextSecondaryBrush}" Margin="16,12,16,4"
                                           Visibility="{Binding SelectedServer.FavoriteChannels, Converter={StaticResource CollectionVisibility}}"/>
                                <ListView x:Name="FavoriteChannelsList"
                                          ItemsSource="{Binding SelectedServer.FavoriteChannels}" 
                                          SelectedItem="{Binding SelectedServer.SelectedChannel}"
                                          ItemTemplate="{StaticResource ProChannelTemplate}"
                                          SelectionMode="Single"
                                          ScrollViewer.VerticalScrollMode="Disabled"
                                          SelectionChanged="FavoriteChannelsList_SelectionChanged"/>

                                <!-- Channels Section -->
                                <TextBlock Text="CHANNELS" FontSize="11" FontWeight="Bold" Foreground="{StaticResource TextSecondaryBrush}" Margin="16,12,16,4"/>
                                <ListView x:Name="OtherChannelsList"
                                          ItemsSource="{Binding SelectedServer.OtherChannels}" 
                                          SelectedItem="{Binding SelectedServer.SelectedChannel}"
                                          ItemTemplate="{StaticResource ProChannelTemplate}"
                                          SelectionMode="Single"
                                          ScrollViewer.VerticalScrollMode="Disabled"
                                          SelectionChanged="OtherChannelsList_SelectionChanged"/>
                            </StackPanel>
                        </ScrollViewer>

                        <StackPanel Grid.Row="2" Margin="16" Spacing="8">
                            <Button Content="Discover Channels" HorizontalAlignment="Stretch" Margin="0,0,0,8"
                                    Command="{Binding SelectedServer.RefreshChannelListCommand}" Click="DiscoverChannels_Click"/>
                            <Button Content="Disconnect" HorizontalAlignment="Stretch" Command="{Binding SelectedServer.DisconnectCommand}"/>
                        </StackPanel>
                    </Grid>
                </Border>

            <!-- Chat Area -->
            <Grid Grid.Column="1" Background="{StaticResource ChatBackgroundBrush}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1" Padding="16,12">
                    <StackPanel>
                        <TextBlock Text="{Binding SelectedServer.SelectedChannel.Name}" Style="{StaticResource ProHeaderStyle}"/>
                        <HyperlinkButton Padding="0" Margin="0,4,0,0" HorizontalAlignment="Left" Click="Topic_Click" ToolTipService.ToolTip="View/Edit Topic">
                            <TextBlock Text="{Binding SelectedServer.SelectedChannel.Topic}" Foreground="{StaticResource TextSecondaryBrush}" 
                                       Visibility="{Binding SelectedServer.SelectedChannel.Topic, Converter={StaticResource NullToVis}}"
                                       TextTrimming="CharacterEllipsis" FontSize="12"/>
                        </HyperlinkButton>
                    </StackPanel>
                </Border>

                <!-- Right Toggle (For User List) -->
                <Button Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,12,12,0"
                        Command="{Binding ToggleUserListCommand}" Background="Transparent" BorderThickness="0" Padding="4"
                        Visibility="{Binding IsUserListCollapsed, Converter={StaticResource BoolToVis}}">
                    <FontIcon Glyph="&#xE700;" FontSize="18" Foreground="{StaticResource AccentBrush}"/>
                </Button>

                <!-- Messages -->
                <ListView x:Name="ChatList" Grid.Row="1" ItemsSource="{Binding SelectedServer.SelectedChannel.Messages}" 
                          SelectionMode="None" Loaded="ChatList_Loaded" 
                          ShowsScrollingPlaceholders="False"
                          IncrementalLoadingThreshold="2"
                          DataFetchSize="3">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,4,0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" MinWidth="50"/>
                                    <ColumnDefinition Width="Auto" MinWidth="80"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Text="{Binding FormattedTime}" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" VerticalAlignment="Top" Margin="0,0,8,0"
                                           Visibility="{Binding IsSystem, Converter={StaticResource InverseBoolToVis}}"/>
                                <TextBlock Grid.Column="1" Text="{Binding Sender}" FontWeight="SemiBold" VerticalAlignment="Top" Margin="0,0,8,0"
                                           Visibility="{Binding IsSystem, Converter={StaticResource InverseBoolToVis}}">
                                    <TextBlock.Foreground>
                                        <SolidColorBrush Color="{Binding SenderPrefix, Converter={StaticResource StatusToColorConverter}}"/>
                                    </TextBlock.Foreground>
                                </TextBlock>
                                
                                <!-- Regular Message Content -->
                                <TextBlock Grid.Column="2" Text="{Binding Content}" Foreground="{StaticResource TextPrimaryBrush}" TextWrapping="Wrap" VerticalAlignment="Top"
                                           Visibility="{Binding IsSystem, Converter={StaticResource InverseBoolToVis}}"/>

                                <!-- System Message Content (Span across cols if system) -->
                                <TextBlock Grid.Column="0" Grid.ColumnSpan="3" Text="{Binding Content}" Foreground="{StaticResource TextSecondaryBrush}" FontStyle="Italic" FontSize="13" TextWrapping="Wrap" VerticalAlignment="Top"
                                           Visibility="{Binding IsSystem, Converter={StaticResource BoolToVis}}"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <ItemsStackPanel ItemsUpdatingScrollMode="KeepLastItemInView" />
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    <ListView.ItemContainerTransitions>
                        <TransitionCollection>
                            <EntranceThemeTransition IsStaggeringEnabled="False" />
                        </TransitionCollection>
                    </ListView.ItemContainerTransitions>
                </ListView>

                <!-- Input -->
                <Grid Grid.Row="2" Margin="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="ChatInput" PlaceholderText="Message #channel..." KeyDown="ChatInput_KeyDown" CornerRadius="4"/>
                    <Button Grid.Column="1" Content="Send" Margin="8,0,0,0" 
                            Command="{Binding SelectedServer.SendCommand}" 
                            CommandParameter="{Binding Text, ElementName=ChatInput}"/>
                </Grid>
            </Grid>

                <!-- User List -->
                <Border Grid.Column="2" Background="{StaticResource AppBackgroundBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1,0,0,0"
                        Visibility="{Binding IsUserListCollapsed, Converter={StaticResource InverseBoolToVis}}">
                    <Grid Width="200">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Padding="12,12,12,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Users" FontWeight="Bold" FontSize="14" Foreground="{StaticResource TextSecondaryBrush}"/>
                            <Button Grid.Column="1" Command="{Binding ToggleUserListCommand}" Background="Transparent" BorderThickness="0" Padding="4">
                                <FontIcon Glyph="&#xE700;" FontSize="14" Foreground="{StaticResource TextSecondaryBrush}"/>
                            </Button>
                        </Grid>

                        <TextBox Grid.Row="1" x:Name="UserSearchBox" 
                                 PlaceholderText="Filter users..." 
                                 Margin="12,0,12,8"
                                 Text="{Binding SelectedServer.SelectedChannel.UserSearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 FontSize="12" Height="32" CornerRadius="4"/>

                        <ScrollViewer Grid.Row="2">
                            <ItemsControl ItemsSource="{Binding SelectedServer.SelectedChannel.GroupedUsers}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="0,0,0,12">
                                            <TextBlock Text="{Binding Key}" FontWeight="Bold" Foreground="{StaticResource TextSecondaryBrush}" Margin="12,8,0,4" FontSize="12"/>
                                            <ItemsControl ItemsSource="{Binding}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                    <Grid Margin="12,2" Background="Transparent" Tapped="UserItem_Tapped">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="16"/>
                                                            <ColumnDefinition Width="Auto" MinWidth="12"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>
                                                        
                                                        <!-- Status Indicator -->
                                                        <Ellipse Width="8" Height="8" Margin="0,0,8,0" VerticalAlignment="Center">
                                                            <Ellipse.Fill>
                                                                <SolidColorBrush Color="{Binding IsOnline, Converter={StaticResource StatusToColorConverter}}"/>
                                                            </Ellipse.Fill>
                                                        </Ellipse>

                                                        <TextBlock Grid.Column="1" Text="{Binding Prefix}" FontWeight="Bold">
                                                            <TextBlock.Foreground>
                                                                <SolidColorBrush Color="{Binding Prefix, Converter={StaticResource StatusToColorConverter}}"/>
                                                            </TextBlock.Foreground>
                                                        </TextBlock>
                                                        <TextBlock Grid.Column="2" Text="{Binding Nickname}">
                                                            <TextBlock.Foreground>
                                                                <SolidColorBrush Color="{Binding Prefix, Converter={StaticResource StatusToColorConverter}}"/>
                                                            </TextBlock.Foreground>
                                                        </TextBlock>

                                                        <FlyoutBase.AttachedFlyout>
                                                            <Flyout>
                                                                <StackPanel Width="220" Spacing="10">
                                                                    <TextBlock Text="{Binding Nickname}" FontWeight="Bold" FontSize="18" Foreground="{StaticResource AccentBrush}"/>
                                                                    <StackPanel>
                                                                        <TextBlock Text="Host:" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}"/>
                                                                        <TextBlock Text="{Binding Hostname}" IsTextSelectionEnabled="True" TextWrapping="Wrap"/>
                                                                    </StackPanel>
                                                                    <StackPanel>
                                                                        <TextBlock Text="Channels:" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}"/>
                                                                        <ItemsControl ItemsSource="{Binding Channels}">
                                                                            <ItemsControl.ItemsPanel>
                                                                                <ItemsPanelTemplate>
                                                                                    <VariableSizedWrapGrid Orientation="Horizontal" MaximumRowsOrColumns="5"/>
                                                                                </ItemsPanelTemplate>
                                                                            </ItemsControl.ItemsPanel>
                                                                            <ItemsControl.ItemTemplate>
                                                                                <DataTemplate>
                                                                                    <HyperlinkButton Content="{Binding}" Padding="4,2" 
                                                                                                    Command="{Binding DataContext.SelectedServer.JoinChannelCommand, ElementName=MainGrid}"
                                                                                                    CommandParameter="{Binding}"/>
                                                                                </DataTemplate>
                                                                            </ItemsControl.ItemTemplate>
                                                                        </ItemsControl>
                                                                    </StackPanel>
                                                                    
                                                                    <MenuFlyoutSeparator/>
                                                                    
                                                                    <Button Content="WHOIS" HorizontalAlignment="Stretch" 
                                                                            Command="{Binding DataContext.SelectedServer.WhoisUserCommand, ElementName=MainGrid}" 
                                                                            CommandParameter="{Binding}" Click="ShowAdvancedWhois_Click"/>
                                                                    
                                                                    <Grid ColumnSpacing="8">
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="*"/>
                                                                            <ColumnDefinition Width="*"/>
                                                                        </Grid.ColumnDefinitions>
                                                                        <Button Content="Kick" HorizontalAlignment="Stretch" 
                                                                                Command="{Binding DataContext.SelectedServer.KickUserCommand, ElementName=MainGrid}" 
                                                                                CommandParameter="{Binding}"/>
                                                                        <Button Grid.Column="1" Content="Ban" HorizontalAlignment="Stretch" 
                                                                                Command="{Binding DataContext.SelectedServer.BanUserCommand, ElementName=MainGrid}" 
                                                                                CommandParameter="{Binding}"/>
                                                                    </Grid>

                                                                    <StackPanel Visibility="{Binding DataContext.SelectedServer.IsIrcOp, ElementName=MainGrid, Converter={StaticResource BoolToVis}}">
                                                                        <MenuFlyoutSeparator/>
                                                                        <TextBlock Text="Operator Actions" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,4"/>
                                                                        <Grid ColumnSpacing="8">
                                                                            <Grid.ColumnDefinitions>
                                                                                <ColumnDefinition Width="*"/>
                                                                                <ColumnDefinition Width="*"/>
                                                                            </Grid.ColumnDefinitions>
                                                                            <Button Content="Kill" HorizontalAlignment="Stretch" 
                                                                                    Command="{Binding DataContext.SelectedServer.KillUserCommand, ElementName=MainGrid}" 
                                                                                    CommandParameter="{Binding}"/>
                                                                            <Button Grid.Column="1" Content="Gline" HorizontalAlignment="Stretch" 
                                                                                    Command="{Binding DataContext.SelectedServer.GlineUserCommand, ElementName=MainGrid}" 
                                                                                    CommandParameter="{Binding}"/>
                                                                        </Grid>
                                                                    </StackPanel>
                                                                </StackPanel>
                                                            </Flyout>
                                                        </FlyoutBase.AttachedFlyout>
                                                    </Grid>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>

            <!-- Connection Overlay (Centered in Workspace) -->
            <Grid Background="Transparent" Visibility="{Binding SelectedServer, Converter={StaticResource NullToVis}, ConverterParameter=Invert}">
                <!-- Subtle Backdrop -->
                <Border Background="Black" Opacity="0.5" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
                
                <!-- Login Card (The 'square background') -->
                <Border Background="{StaticResource SidebarBackgroundBrush}" 
                        Opacity="0.95"
                        CornerRadius="16" 
                        Width="420" 
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Center"
                        Padding="40"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1"
                        Shadow="{StaticResource SharedShadow}">
                    <StackPanel Spacing="24">
                        <StackPanel Spacing="8">
                            <Image Source="ms-appx:///konnectchat2.png" MaxHeight="140" HorizontalAlignment="Center"/>
                            <TextBlock Text="KonnectChat IRC" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Foreground="{StaticResource AccentBrush}"/>
                            <TextBlock Text="Connect to a server to get started" FontSize="14" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                        </StackPanel>
                        
                        <Grid ColumnSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Header="Server Address" Text="{Binding ConnectAddress, Mode=TwoWay}" PlaceholderText="irc.libera.chat"/>
                            <NumberBox Grid.Column="1" Header="Port" Value="{Binding ConnectPort, Mode=TwoWay}" Width="100" SmallChange="1" LargeChange="10" SpinButtonPlacementMode="Compact"/>
                        </Grid>
                        
                        <TextBox Header="Nickname" Text="{Binding ConnectNick, Mode=TwoWay}" PlaceholderText="KonnectUser"/>
                        
                        <Expander Header="Advanced Options" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch">
                            <StackPanel Spacing="16">
                                <TextBox Header="Auto-Join Channel" Text="{Binding AutoJoinChannel, Mode=TwoWay}" PlaceholderText="#konnect-chat"/>
                                <StackPanel Spacing="8">
                                    <CheckBox Content="Use Server Password" IsChecked="{Binding UseServerPassword, Mode=TwoWay}"/>
                                    <PasswordBox Header="Password" Password="{Binding ServerPassword, Mode=TwoWay}" 
                                                 Visibility="{Binding UseServerPassword, Converter={StaticResource BoolToVis}}"/>
                                </StackPanel>
                            </StackPanel>
                        </Expander>
                        
                        <Button Content="Connect Now" HorizontalAlignment="Stretch" Padding="12"
                                Background="{StaticResource AccentBrush}" Foreground="White" FontWeight="Bold" FontSize="16"
                                Command="{Binding ConnectCommand}" CornerRadius="8"/>
                        
                        <TextBlock Text="Tip: You can save multiple servers in the sidebar." FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>

        <!-- Channel List Dialog -->
        <ContentDialog x:Name="ChannelListDialog" 
                       Title="Discover Channels"
                       PrimaryButtonText="Close"
                       SecondaryButtonText="Refresh"
                       SecondaryButtonClick="ChannelListDialog_RefreshClick"
                       RequestedTheme="Dark"
                       Background="{StaticResource SidebarBackgroundBrush}">
            <Grid Width="500" Height="400">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBox x:Name="ChannelSearchBox" PlaceholderText="Search channels..." Margin="0,0,0,12" 
                         Text="{Binding SelectedServer.ChannelSearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                
                <ScrollViewer Grid.Row="1">
                    <StackPanel>
                        <!-- Favorite Available Channels -->
                        <TextBlock Text="FAVORITES" FontSize="11" FontWeight="Bold" Foreground="{StaticResource TextSecondaryBrush}" Margin="12,8,12,4"
                                   Visibility="{Binding SelectedServer.FavoriteAvailableChannels, Converter={StaticResource CollectionVisibility}}"/>
                        <ListView ItemsSource="{Binding SelectedServer.FavoriteAvailableChannels}" SelectionMode="None">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="12" BorderThickness="0,0,0,1" BorderBrush="#222">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="16"/>
                                            <TextBlock Text="{Binding Topic}" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" MaxLines="2" TextWrapping="Wrap"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="12,0">
                                            <TextBlock Text="{Binding UserCount}" HorizontalAlignment="Center" FontWeight="Bold"/>
                                            <TextBlock Text="users" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}"/>
                                        </StackPanel>
                                        <Button Grid.Column="2" Content="Join" VerticalAlignment="Center" 
                                                Command="{Binding DataContext.SelectedServer.JoinChannelCommand, ElementName=MainGrid}"
                                                CommandParameter="{Binding Name}" Click="JoinChannelFromList_Click"/>
                                        <Button Grid.Column="3" 
                                                Command="{Binding DataContext.SelectedServer.ToggleFavoriteCommand, ElementName=MainGrid}"
                                                CommandParameter="{Binding}"
                                                Background="Transparent" BorderThickness="0" Padding="8"
                                                VerticalAlignment="Center" Margin="8,0,0,0">
                                            <Grid>
                                                <FontIcon Glyph="&#xE734;" FontSize="16" Foreground="{StaticResource TextSecondaryBrush}" 
                                                          Visibility="{Binding IsFavorite, Converter={StaticResource InverseBoolToVis}}"/>
                                                <FontIcon Glyph="&#xE735;" FontSize="16" Foreground="Gold" 
                                                          Visibility="{Binding IsFavorite, Converter={StaticResource BoolToVis}}"/>
                                            </Grid>
                                        </Button>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>

                        <!-- All Other Available Channels -->
                        <TextBlock Text="OTHER CHANNELS" FontSize="11" FontWeight="Bold" Foreground="{StaticResource TextSecondaryBrush}" Margin="12,16,12,4"/>
                        <ListView ItemsSource="{Binding SelectedServer.OtherAvailableChannels}" SelectionMode="None">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="12" BorderThickness="0,0,0,1" BorderBrush="#222">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="16"/>
                                            <TextBlock Text="{Binding Topic}" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" MaxLines="2" TextWrapping="Wrap"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="12,0">
                                            <TextBlock Text="{Binding UserCount}" HorizontalAlignment="Center" FontWeight="Bold"/>
                                            <TextBlock Text="users" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}"/>
                                        </StackPanel>
                                        <Button Grid.Column="2" Content="Join" VerticalAlignment="Center" 
                                                Command="{Binding DataContext.SelectedServer.JoinChannelCommand, ElementName=MainGrid}"
                                                CommandParameter="{Binding Name}" Click="JoinChannelFromList_Click"/>
                                        <Button Grid.Column="3" 
                                                Command="{Binding DataContext.SelectedServer.ToggleFavoriteCommand, ElementName=MainGrid}"
                                                CommandParameter="{Binding}"
                                                Background="Transparent" BorderThickness="0" Padding="8"
                                                VerticalAlignment="Center" Margin="8,0,0,0">
                                            <Grid>
                                                <FontIcon Glyph="&#xE734;" FontSize="16" Foreground="{StaticResource TextSecondaryBrush}" 
                                                          Visibility="{Binding IsFavorite, Converter={StaticResource InverseBoolToVis}}"/>
                                                <FontIcon Glyph="&#xE735;" FontSize="16" Foreground="Gold" 
                                                          Visibility="{Binding IsFavorite, Converter={StaticResource BoolToVis}}"/>
                                            </Grid>
                                        </Button>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </ContentDialog>

        <!-- Nickname Change Dialog -->
        <ContentDialog x:Name="NickChangeDialog"
                       Title="Change Nickname"
                       PrimaryButtonText="Change"
                       CloseButtonText="Cancel"
                       DefaultButton="Primary">
            <StackPanel Spacing="12">
                <TextBlock Text="Enter your new nickname:"/>
                <TextBox x:Name="NewNickTextBox" PlaceholderText="Nickname"/>
            </StackPanel>
        </ContentDialog>

        <!-- WHOIS Detail Dialog -->
        <ContentDialog x:Name="WhoisDetailDialog"
                       Title="User Information"
                       PrimaryButtonText="Close"
                       RequestedTheme="Dark"
                       DataContext="{Binding SelectedWhoisUser}"
                       Background="{StaticResource SidebarBackgroundBrush}">
            <StackPanel Width="400" Spacing="12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Nickname:" Width="100" Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBlock Grid.Column="1" Text="{Binding Nickname}" FontSize="18" FontWeight="Bold" Foreground="{StaticResource AccentBrush}"/>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Username:" Width="100" Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBlock Grid.Column="1" Text="{Binding Username}"/>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Hostname:" Width="100" Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBlock Grid.Column="1" Text="{Binding Hostname}" IsTextSelectionEnabled="True" TextWrapping="Wrap"/>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Real Name:" Width="100" Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBlock Grid.Column="1" Text="{Binding Realname}"/>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Server:" Width="100" Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBlock Grid.Column="1" Text="{Binding Server}" TextWrapping="Wrap"/>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Connecting From:" Width="110" Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBlock Grid.Column="1" Text="{Binding ConnectingFrom}" IsTextSelectionEnabled="True" TextWrapping="Wrap" FontWeight="SemiBold"/>
                </Grid>
                <StackPanel>
                    <TextBlock Text="Channels:" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,8,0,4"/>
                    <ItemsControl ItemsSource="{Binding Channels}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VariableSizedWrapGrid Orientation="Horizontal" MaximumRowsOrColumns="5"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <HyperlinkButton Content="{Binding}" Padding="4,2" Click="WhoisDetailChannel_Click"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </StackPanel>
        </ContentDialog>

        <!-- Topic View/Edit Dialog -->
        <ContentDialog x:Name="TopicEditDialog"
                       Title="Channel Topic"
                       PrimaryButtonText="Update Topic"
                       CloseButtonText="Close"
                       DefaultButton="Primary">
            <StackPanel Spacing="12" Width="400">
                <TextBlock Text="Current Topic:" Foreground="{StaticResource TextSecondaryBrush}"/>
                <TextBlock Text="{Binding SelectedServer.SelectedChannel.Topic}" TextWrapping="Wrap" FontWeight="SemiBold"/>
                
                <StackPanel x:Name="TopicEditStack" Spacing="8" Margin="0,12,0,0">
                    <TextBlock Text="Edit Topic (Operators Only):" Foreground="{StaticResource AccentBrush}" FontWeight="Bold"/>
                    <TextBox x:Name="TopicTextBox" PlaceholderText="Enter new topic..." TextWrapping="Wrap" AcceptsReturn="True" Height="80"/>
                </StackPanel>
            </StackPanel>
        </ContentDialog>
    </Grid>
</Window>
